# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# F# source files
[*.{fs,fsx,fsi}]
indent_style = space
indent_size = 2
fsharp_multiline_bracket_style = stroustrup  # Fantomas: place closing bracket on new line, opening on same line as construct

# JavaScript / TypeScript (future-proof if TS added later)
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2

# JSON, YAML, CSS, HTML
[*.{json,yml,yaml,css,html}]
indent_style = space
indent_size = 2

# Markdown: keep trailing spaces (for line breaks)
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2
